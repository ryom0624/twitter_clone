<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <%= form_for(@tweet) do |f|%>
        <div class="form-group">
          <%= f.text_area :content, class:"form-control", rows:5%>
        </div>
        <%= f.submit "Tweetする", class:"btn btn-primary btn-block"%>
      <% end %>
    </aside>
    <div class="col-xs-8">
      <%= render "tweets/tweets", tweets: @tweets %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Twitter</h1>
      <%= link_to "Sign up",signup_path,class:"btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>